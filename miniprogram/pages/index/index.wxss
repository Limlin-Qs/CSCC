/**index.wxss**/
.header {
  margin: 20rpx;
  color: black;
  font-size: 22px;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}
.bc-red {
  width: 100%;
  height: 150px;
  background-color: rebeccapurple;
}
.bc-green {
  width: 100%;
  height: 150px;
  background-color: goldenrod;
}
.bc-blue {
  width: 100%;
  height: 150px;
  background-color: blanchedalmond;
}
button {
  margin-top: 10px;
  width: auto;
  font-size: 16px;
}
.btnLayout {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.fontStyle {
  font-family: cursive;
  font-size: 25px;
  font-style: italic;
  font-weight: bold;
}
.videoLayout {
  margin: 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
input {
  height: 80rpx;
  background-color: white;
  border: 1px solid blanchedalmond;
  margin: 10px 0;
}
.theme {
  font-size: 15px;
  text-align: center;
}
.footer {
  margin: 20rpx;
  font-size: 15px;
  text-align: center;
}
